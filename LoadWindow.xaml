<Window x:Class="Bedrock.LoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:Bedrock"
        mc:Ignorable="d"
        Title=""
        Height="100" Width="100"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        ShowInTaskbar="False"
        Loaded="Loading">
    
    <Border>
        <Grid>
            <Image x:Name="WindowLoadFragmentMainImageBedrock" Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Source="Bedrock.png" Opacity="0" />
        </Grid>
    </Border>
</Window>
